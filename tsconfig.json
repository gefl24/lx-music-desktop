{
  // https://github.com/tsconfig/bases#recommended-tsconfigjson
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./src",                                     /* Specify the base directory to resolve non-relative module names. */
    "paths": {
      "@common/*": ["common/*"],
      "@renderer/*": ["renderer/*"],
      "@server/*": ["server/*"],
      "@static/*": ["static/*"],
      "@root/*": ["./*"],
      "electron": ["mock"],
      "@renderer/worker": ["mock"],
      "@renderer/utils/music": ["mock"],
      "@renderer/utils/data": ["mock"],
      "@renderer/utils/message": ["mock"],
      "@renderer/store": ["mock"],
      "@renderer/store/list/action": ["mock"],
      "@renderer/store/list/state": ["mock"],
      "@renderer/store/songList/action": ["mock"],
      "@renderer/store/songList/state": ["mock"],
      "@renderer/store/player/lyric": ["mock"],
      "@renderer/store/player/state": ["mock"],
      "@renderer/store/player/action": ["mock"],
      "@renderer/store/player/volume": ["mock"],
      "@renderer/store/player/playbackRate": ["mock"],
      "@renderer/store/player/playProgress": ["mock"],
      "@renderer/store/setting": ["mock"],
      "@renderer/store/download/utils": ["mock"],
      "@renderer/store/list/syncSourceList": ["mock"],
      "@renderer/plugins/player": ["mock"],
      "@renderer/plugins/i18n": ["mock"],
      "@renderer/plugins/Dialog": ["mock"],
      "@renderer/utils/ipc": ["mock"],
      "@renderer/utils/musicSdk": ["mock"],
      "@renderer/utils/musicSdk/api-source": ["mock"],
      "@renderer/core/player": ["mock"],
      "@renderer/core/player/action": ["mock"],
      "@renderer/core/player/utils": ["mock"],
      "@renderer/core/apiSource": ["mock"],
      "@renderer/core/dislikeList": ["mock"],
      "@renderer/core/lyric": ["mock"],
      "@renderer/core/music": ["mock"],
      "@renderer/core/music/download": ["mock"],
      "@renderer/core/music/local": ["mock"],
      "@renderer/core/music/online": ["mock"],
      "@renderer/core/music/utils": ["mock"],
      "@renderer/useApp/compositions/usePlaySonglist": ["mock"],
      "@renderer/useApp/useDeeplink/utils": ["mock"],
      "@common/utils/vueTools": ["mock"],
      "@common/utils/common": ["mock"],
      "@common/utils/tools": ["mock"],
      "@common/utils/musicMeta": ["mock"],
      "@common/utils/download": ["mock"],
      "@common/utils/nodejs": ["mock"],
      "@common/hotKey": ["mock"],
      "@common/constants": ["mock"],
      "@common/defaultSetting": ["mock"],
      "@common/ipcNames": ["mock"],
      "@common/types/app_setting": ["mock"],
      "@common/types/common": ["mock"],
      "@common/types/user_api": ["mock"],
      "@common/types/sync": ["mock"],
      "@common/types/list_sync": ["mock"],
      "@common/types/music": ["mock"],
      "@common/types/list": ["mock"],
      "@common/types/download_list": ["mock"],
      "@common/types/player": ["mock"],
      "@common/types/shims_vue": ["mock"],
      "@common/types/utils": ["mock"],
      "@common/types/theme": ["mock"],
      "@common/types/desktop_lyric": ["mock"],
      "@common/types/ipc_renderer": ["mock"],
      "@common/types/config_files": ["mock"],
      "@common/types/music_metadata": ["mock"],
      "@common/types/sound_effect": ["mock"],
      "@common/types/dislike_list": ["mock"],
      "@common/types/open_api": ["mock"],
      "@root/lang": ["mock"],
      "@renderer/utils": ["mock"],
      "@renderer/utils/simplify-chinese-main": ["mock"]
    },
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "src/renderer/**/*",
    "src/server/**/*",
    "src/common/**/*",
    "src/static/**/*",
    "src/mock/**/*"
  ],
  "exclude": [
    "src/main/**/*",
    "src/renderer-lyric/**/*",
    "node_modules"
  ]
}
